<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <TextView
            android:textSize="@dimen/text_size_large"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginStart="@dimen/padding_large"
            android:id="@+id/title"
            android:text="@string/title"
            android:maxLines="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintStart_toEndOf="@id/image"/>

        <TextView
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginStart="@dimen/padding_large"
            android:id="@+id/timeToCook"
            android:text="@string/timeToCook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toEndOf="@id/image"/>

        <TextView
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginStart="@dimen/padding_large"
            android:id="@+id/isVegan"
            android:text="@string/isVegan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/timeToCook"
            app:layout_constraintStart_toEndOf="@id/image"/>

        <TextView
            android:textSize="@dimen/text_size_large"
            android:layout_marginTop="@dimen/default_padding"
            android:id="@+id/ingredientsTitle"
            android:text="@string/ingredients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:textSize="@dimen/text_size_large"
            android:layout_marginTop="@dimen/default_padding"
            android:id="@+id/ingredientsList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ingredientsTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:textSize="@dimen/text_size_large"
            android:layout_marginTop="@dimen/default_padding"
            android:id="@+id/instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ingredientsList"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>